<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span9">
    <%= image_tag(@idea.picture_url, :width => "100%", class: "bordered") if @idea.picture.present? %>
    <h2>Comments</h2>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>
  </div>

  <div class="span3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-default" %> 
      <%= link_to 'Destroy', @idea, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %> 
      <%= link_to 'Back', ideas_path, class: "btn btn-default" %>
    </p>
  </div>
</div>
