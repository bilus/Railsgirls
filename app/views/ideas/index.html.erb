<h1></h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4">
        <%= link_to idea do %>
        <td><%= image_tag idea.picture_url(:large_thumb), class: "bordered" if idea.picture? %></td>
        <% end %>
        <h2><%= link_to idea.name, idea %></h2>
      </div>
    <% end %>
  </div>
<% end %>


